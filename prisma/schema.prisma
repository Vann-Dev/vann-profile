generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum portfolioType {
  video
  image
  website
}

model portfolio {
  id      String        @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  content String
  link    String
  type    portfolioType
  date    DateTime      @default(now())
  expand  Boolean       @default(false)
}
